<% layout('layout', { title: 'Dashboard' }) %>
<h1>Dashboard</h1>
<% if (locals.user) { %>
  <p>Welcome, <%= locals.user.username %>!</p>
  <p>User ID: <%= locals.user.userId %></p>
  <% if (locals.user.role === 'admin') { %>
    <section class="admin-section">
      <h2>Admin Area</h2>
      <p>You have admin privileges.</p>
    </section>
  <% } %>
  <a href="/logout" class="logout-button">Logout</a>
<% } else { %>
  <p>Please <a href="/login">login</a> to view the dashboard.</p>
<% } %>